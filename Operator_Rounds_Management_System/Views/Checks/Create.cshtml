@model Operator_Rounds_Management_System.Models.Check

@{
    ViewData["Title"] = "Create";
    Layout = "/Views/Shared/_LayoutLander.cshtml";
}

<h1>EDIT CONTACT</h1>
<div class="p-3 border border-2 shadow-lg bg-light">

    <form asp-action="Create" asp-controller="Checks" enctype="multipart/form-data">
        <div class="row g-3 p-2">
            <div class="col-12 col-lg-4">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
