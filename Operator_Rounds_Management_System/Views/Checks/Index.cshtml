@model IEnumerable<Operator_Rounds_Management_System.Models.Check>

@{
    ViewData["Title"] = "Index of Checks";
    //Layout = "/Views/Shared/_LayoutLander.cshtml";
}

<h1>Index of Checks</h1>

<div class="col-12 text-start mb-2">
    <a asp-action="Create" asp-controller="Checks" class="btn btn-primary rounded-pill">Create New</a>
</div>


    <div class="col-12">
        <div class="row row-cols-1 g-3">
            <div class="col">
                <div class="card mb-3">
                    <div class="row g-0">
                        @foreach (var item in Model)
                        {
                            <div class="p-3 border border-2 shadow-lg bg-light">
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">@item.Name</h5>
                                        <div class="card-text">
                                            @item.Description
                                        </div>
                                        <div class="fs-4">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="editIcons"><i class="bi bi-pencil-fill"></i></a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="editIcons"><i class="bi bi-trash-fill text-danger"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>



