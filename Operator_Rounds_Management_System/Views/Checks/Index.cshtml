@model IEnumerable<Operator_Rounds_Management_System.Models.Check>

@{
    ViewData["Title"] = "Index of Checks";
    //Layout = "/Views/Shared/_LayoutLander.cshtml";
}

<div class="row">
    <div class="col-12 text-start mb-2">
        <a asp-action="Create" asp-controller="Checks" class="btn btn-primary rounded-pill">Create New</a>
    </div>
</div>

<div class="row g-2">

    <div class="col-12 col-md-8">
        <div class="row row-cols-1 g-3">
            @foreach (var check in Model)
            {
                    <div class="col">
                        <div class="card mb-3">
                            <div class="row g-0">
                                <div class="p-3 border border-2 shadow-lg bg-light">
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h5 class="card-title">@Html.DisplayFor(modelItem => check.Name)</h5>
                                            <div class="card-text">
                                            @Html.DisplayFor(modelItem => check.Description)
                                            </div>
                                            <div class="fs-4">
                                                <a asp-action="Edit" asp-route-id="@check.Id" class="editIcons"><i class="bi bi-pencil-fill"></i></a>
                                                <a asp-action="Delete" asp-route-id="@check.Id" class="editIcons"><i class="bi bi-trash-fill text-danger"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
            }
        </div>
    </div>
</div>



